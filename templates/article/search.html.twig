{% extends 'base.html.twig' %}

{% block title %}Rechercher un article{% endblock %}

{% block body %}
<div class="users-index container my-3">
    <h1>Rechercher un article</h1>
    {# Form #}
    <div class="container my-5">
        <form action="#">
            <label for="search">Chercher un sujet, technologie, etc.</label>
            <input 
                class="form-control form-control-lg" 
                type="search"
                placeholder="Comment centrer une div ?"
                name="search"
                aria-label="Search"
            >
            <button class="btn btn-primary my-3" type="submit">Rechercher</button>
        </form>
    </div>
    <!-- Display articles -->
    {% for article in articles %}
        <div class="user-card card my-3">
            <div class="row">
                {# Thumbnail #}
                <div class="col-12 col-sm-4 col-lg-2 d-flex justify-content-center align-items-center my-1 my-lg-0">
                    <img class="col-10 img-thumbnail object-fit-cover" src="{{ article.thumbnailUrl }}" alt="Image de l'article {{ article.title }}">
                </div>
                
                {# Container #}
                <div class="col-12 col-sm-8 col-lg-10 d-flex flex-column flex-lg-row align-items-center justify-content-center justify-content-lg-between p-1 p-lg-5 text-break">
                    {# Title #}
                    <div class="col-10 col-lg-3 text-center">
                        <h2 class="fw-bold fs-3">{{ article.title }}</h2>
                    </div>
                    {# Author #}
                    <div class="col-10 col-lg-3 text-center">
                        <h2 class="fs-5">{{ article.author }}</h2>
                    </div>
                    {# Tags #}
                    <div class="col-10 col-lg-3 text-center">
                        <h2 class="text-muted fs-6">{{ article.tags|join(', ') }}</h2>
                    </div>
                    {# Show #}
                    <div class="col-10 col-lg-2 text-center">
                        <a href="{{ path('app_article_show', { 'slug': article.slug }) }}" class="btn btn-primary my-1 my-lg-0">Lire l'article</a>
                    </div>
                </div>

            </div>
        </div>
    {% endfor %}


</div>
{% endblock %}
