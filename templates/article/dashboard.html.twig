{% extends 'base.html.twig' %}

{% block title %}Menu de la rédaction{% endblock %}

{% block body %}
<div class="users-index container my-3">
    <h1>Menu de la rédaction</h1>

    <!-- Display user -->
    {% for article in articles %}
        <div class="user-card card my-3">
            <div class="row">
                <div class="col-12 col-sm-4 col-lg-2 d-flex justify-content-center align-items-center my-1 my-lg-0">
                    <img class="col-3 col-sm-6 img-thumbnail object-fit-cover" src="{{ article.thumbnailUrl }}" alt="Image de l'article {{ article.title }}">
                </div>
                <div class="col-12 col-sm-8 col-lg-10 d-flex flex-column flex-lg-row align-items-center justify-content-center justify-content-lg-between p-1 p-lg-5 text-break">

                    <div class="col-10 col-lg-3 text-center">
                        <h2 class="fw-bold fs-3">{{ article.title }}</h2>
                    </div>

                    {# Validation #}
                    <div class="col-10 col-lg-3 text-center">
                        {% if article.isValidated == true %}
                            <h3 class="text-success">Validé</h3>
                        {% else %}
                            <h3 class="text-danger">Non validé</h3>
                        {% endif %}
                    </div>

                    {# Show #}
                    <div class="col-10 col-lg-3 text-center">
                        <a href="{{ path('app_article_show', { 'slug': article.slug }) }}" class="btn btn-primary my-1 my-lg-0">Voir l'article</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}


</div>
{% endblock %}
