{% block article %}
<!-- Single article -->
<div class="col-10 col-md-5 mx-auto my-2 my-md-4">
    <a href="{{ path('app_article_show', { id: article.id }) }}" class="card-link text-decoration-none">
        <div class="card">
            <img src="{{ article.thumbnailUrl }}" class="card-img-top" alt="{{ article.title }}">
            <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">
                {{ article.extract }}
            </p>
            <aside class="row mt-3">
                <p class="col-6 text-decoration-none fw-bold card-author">Par Lucas</p>
                <p class="col-6 text-muted fst-italic">{{ article.createdAt|ago(locale='fr') }}</p>
                <p class="col-12">
                    {{ article.tags|join(', ') }}
                </p>
            </aside>
            </div>
        </div>
    </a>
</div>
{% endblock %}