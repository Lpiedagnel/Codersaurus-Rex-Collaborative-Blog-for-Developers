{% extends "base.html.twig" %}

{% block body %}
      <!-- Hero Img -->
      <div class="hero">
        <div class="container text-light d-flex flex-column justify-content-center align-items-center text-center">
          <h1>Codersaurus Rex</h1>
          <h2>Un blog collaboratif sur le codage, par les codeurs, pour les codeurs.</h2>
        </div>
      </div>
      <!-- Tags -->
      <section class="container tags">
        <h3 class="mt-3 fw-bolder">HTML</h3>
        <hr class="my-3">
          <div class="d-flex flex-row align-items-start flex-wrap gap-4">
          {% for tag in tags %}
              <a href="{{ path('app_home', {tag: tag}) }}" class="btn btn-primary d-block px-5 py-2 fw-bolder shadow border font-monospace">{{ tag }}</a>
          {% endfor %}
          </div>
      </section>
      <!-- Articles -->
      <main class="articles container">
        <div class="row mt-5">
        {% for article in articles %}
            {% include "article/_article-card.html.twig" %}
        {% endfor %}
        </div>
        <!-- See more articles -->
        <div class="d-flex justify-content-center my-4">
          <a href="{{ path('app_article_index') }}" class="fw-bold text-decoration-none fs-5">Plus d'articles &#10132;</a>
        </div>
      </main>
{% endblock %}
