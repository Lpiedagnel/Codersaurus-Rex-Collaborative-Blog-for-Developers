{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="users-index container my-3">
    <h1>Liste des utilisateurs</h1>

    <!-- Display user -->
    {% for user in users %}
        <div class="user-card card my-3">
            <div class="row">
                <div class="col-12 col-sm-4 col-lg-2 d-flex justify-content-center align-items-center my-1 my-lg-0">
                    <img class="col-3 col-sm-6 img-thumbnail object-fit-cover" src="{{ user.avatar_link }}" alt="Avatar de {{ user.username }}">
                </div>
                <div class="col-12 col-sm-8 col-lg-10 d-flex flex-column flex-lg-row align-items-center justify-content-center justify-content-lg-between p-1 p-lg-5 text-break">

                    {# Username #}
                    <div class="col-10 col-lg-3 text-center">
                        <h2 class="fw-bold fs-3">{{ user.username }}</h2>
                    </div>

                    {# Roles #}
                    <div class="col-10 col-lg-3 text-center">
                        {% if 'ROLE_ADMIN' in user.role %}
                            <h3 class="fs-6 text-danger fw-bold">Admininistration</h3>
                        {% elseif 'ROLE_EDITOR' in user.role %}
                            <h3 class="fs-6 text-primary fw-bold">RÃ©daction</h3>
                        {% else %}
                            <h3 class="fs-6 text-secondary">Membre</h3>
                        {% endif %}
                    </div>

                    {# Job #}
                    <div class="col-10 col-lg-3 text-center">
                    {% if user.job %}
                        <h3 class="fs-5">{{ user.job }}</h3>
                    {% endif %}
                    </div>

                    {# Link #}
                    <div class="col-10 col-lg-3 text-center">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary my-1 my-lg-0">Voir le profil</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}


</div>
{% endblock %}
