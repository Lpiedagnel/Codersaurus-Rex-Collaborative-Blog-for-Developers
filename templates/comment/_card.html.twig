            <li class="post__comment card shadow mt-3">
              <div class="card-body row">
                <div class="d-flex flex-column flex-lg-row align-items-center justify-content-between gap-4">
                  <img src="{{ comment.author.avatarLink }}" class="rounded-circle col-12 col-md-3 m-auto col-7 col-sm-4 col-md-3 col-lg-2 col-xl-1" alt="Avatar de {{ comment.author.username }}">
                  <div class="col-12 col-md-9">
                    <div class="text-muted">
                      <h4>{{ comment.author.username }}</h4>
                      <p>{{ comment.createdAt|ago(locale='fr') }}</p>
                    </div>
                    <p>{{ comment.content }}</p>
                  </div>
                </div>
              </div>
            </li>