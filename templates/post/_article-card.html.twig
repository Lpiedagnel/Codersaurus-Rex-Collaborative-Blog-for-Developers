{% block article %}
<!-- Single article -->
<div class="col-10 col-md-5 mx-auto my-2 my-md-4">
    <a href="{{ path('app_post_show') }}" class="card-link text-decoration-none">
        <div class="card">
            <img src="{{ asset('/images/article-' ~ random(['1', '2', '3', '4'])  ~ '.webp') }}" class="card-img-top" alt="...">
            <div class="card-body">
            <h5 class="card-title">Comment centrer une div ?</h5>
